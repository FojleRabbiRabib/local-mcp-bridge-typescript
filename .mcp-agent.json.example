{
  "version": "1.0.0",
  "server": {
    "name": "MCP Agent",
    "port": 3000,
    "host": "localhost"
  },
  "permissions": {
    "allowedPaths": [
      "~/Projects",
      "~/Documents"
    ],
    "deniedPaths": [
      "/etc",
      "/sys",
      "/proc",
      "/dev",
      "/root",
      "~/.ssh",
      "~/.aws",
      "~/.config"
    ],
    "allowedCommands": [
      "ls",
      "grep",
      "find",
      "cat",
      "head",
      "tail",
      "git",
      "npm",
      "node",
      "python",
      "python3"
    ],
    "enableCommandExecution": true
  },
  "limits": {
    "maxFileSize": 10485760,
    "commandTimeout": 30000
  }
}
